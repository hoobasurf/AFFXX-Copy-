  <div class="profile-header">
    <img id="userPhoto" src="" alt="Photo de profil">
    <h1 id="userName">Nom</h1>
    <p id="userAge"></p>
  </div>

  <div class="photos" id="userPhotos"></div>

  <div class="description">
    <p id="userDescription">Aucune description disponible.</p>
  </div>

  <a href="authentique.html" class="back-btn">⬅ Retour</a>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const user = JSON.parse(localStorage.getItem("selectedUser"));

      if (user) {
        document.getElementById("userName").textContent = user.name || "Nom inconnu";
        document.getElementById("userAge").textContent = user.age ? `${user.age} ans` : "";
        document.getElementById("userPhoto").src = user.photo || "https://via.placeholder.com/120";
        document.getElementById("userDescription").textContent = user.description || "Cette personne n'a pas encore ajouté de description.";

        const photosContainer = document.getElementById("userPhotos");
        if (user.photos && user.photos.length > 0) {
          user.photos.forEach(photo => {
            const img = document.createElement("img");
            img.src = photo;
            photosContainer.appendChild(img);
          });
        }
      } else {
        document.getElementById("userName").textContent = "Profil introuvable";
      }
    });
  </script>

